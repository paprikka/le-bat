.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      a(href='/', title="Rafal Pastuszak").brand: img(src="img/avatar_normal.png", width="32", height="32").avatar-icon
      ul.nav
        li(ng-class="getClass('/preview')")
          a(ng-href='#/preview') Preview
        li(ng-class="getClass('/about')")
          a(ng-href='#/view1') Info
      form.navbar-form.pull-right(ng-submit="reloadPage()")
        span.btn-group
          button.btn.btn-small None
          button.btn.btn-small Lo
          button.btn.btn-small Hi
        span.label {{currentBlurValue}}
        input(type="range", min="0", max="40", ng-model="currentBlurValue").input-small
        input(type="text", placeholder="Website url", ng-model="newPreviewSrc").input-xxlarge
        button(type="submit").btn.btn-inverse: i.icon-refresh
